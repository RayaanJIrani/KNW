#include <Servo.h>
#include <Sleep_n0m1.h>
#include <EEPROM.h>
Servo base_servo; // Arduinio IO port hook up 
Servo panel_servo; 
#define Photo A5; // Sets the input sensor for the photoresistor as analog 5 (do not change)
#define Solar A6;


Sleep sleep;
int read_solar();
double read_photoresistor(int pin);
unsigned long time;
int sleepLogger = 0;
Servo log_servo;

  void setup() {
